{"cells":[{"cell_type":"code","source":["import numpy as np\n","\n","Y_ = np.array([500,-913,17,203])\n","a = np.random.uniform(-1000,1000,size=(1000,3))\n","c = np.ones(shape=(1000,1))\n","X = np.c_[(a,c)]\n","Y = np.zeros(shape=(1000,1))\n","W = np.zeros(shape=(4))\n","\n","for i in range(0,len(Y)) :\n","    check = Y_[0]*X[i][0] + Y_[1]*X[i][1] + Y_[2]*X[i][2] + Y_[3]*X[i][3]\n","\n","    if check < 0 :\n","        Y[i] = -1\n","    else :\n","        Y[i] = 1\n","\n","flag = False\n","while flag == False :\n","\n","    count = 0\n","\n","    for j in range(0,len(Y)) :\n","\n","        check2 = W[0]*X[j][0] + W[1]*X[j][1] + W[2]*X[j][2] + W[3]*X[j][3]\n","        check3 = Y[j]\n","\n","        if check3*check2 <= 0 :\n","            W = W + (Y[j]*X[j])\n","        else :\n","            count += 1\n","\n","    if count == len(Y) :\n","        flag = True\n","        break\n","\n","\n","W"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"MNJj64njg9N1","executionInfo":{"status":"ok","timestamp":1691865235848,"user_tz":-360,"elapsed":436,"user":{"displayName":"ANIKA ISLAM","userId":"00934771843233001684"}},"outputId":"8d96fc58-175f-4e6c-e3ef-1d28b3750c48"},"execution_count":14,"outputs":[{"output_type":"execute_result","data":{"text/plain":["array([ 5539.26975833, -9896.34776283,   163.2528746 ,   -15.        ])"]},"metadata":{},"execution_count":14}]}],"metadata":{"colab":{"provenance":[],"authorship_tag":"ABX9TyMI171KOpP2Eq5jINoHAiSi"},"kernelspec":{"display_name":"Python 3","name":"python3"},"language_info":{"name":"python"}},"nbformat":4,"nbformat_minor":0}